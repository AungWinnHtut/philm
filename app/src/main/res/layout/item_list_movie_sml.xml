<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="@dimen/movie_list_small_item_height"
              android:foreground="?android:attr/selectableItemBackground"
              android:baselineAligned="false">

    <app.philm.in.view.PhilmImageView
            android:id="@+id/imageview_poster"
            android:layout_width="@dimen/movie_list_small_image_width"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/spacing_minor">

        <app.philm.in.view.FontTextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Philm.Movie.List.Title"/>

        <app.philm.in.view.FontTextView
                android:id="@+id/textview_subtitle_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Philm.Movie.List.Subtitle"/>

        <app.philm.in.view.FontTextView
                android:id="@+id/textview_subtitle_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Philm.Movie.List.Subtitle"/>

    </LinearLayout>

</LinearLayout>