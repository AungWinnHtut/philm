<resources>

    <style name="Widget.Philm.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:indeterminateProgressStyle">@style/Widget.Philm.ActionBar.Progress</item>
    </style>

    <style name="Widget.Philm.Dark.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:indeterminateProgressStyle">@style/Widget.Philm.ActionBar.Progress</item>
    </style>

    <style name="Widget.Philm.ActionBar.Solid" parent="Widget.Philm.ActionBar">
        <item name="android:background">?attr/default_inset_color</item>
    </style>

    <style name="Widget.Philm.ActionBar.Progress" parent="@android:style/Widget.Holo.Light.ProgressBar">
        <item name="android:minHeight">36dip</item>
        <item name="android:maxHeight">36dip</item>
    </style>

    <style name="Widget.Philm.Movie.Grid.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">@dimen/spacing_minor</item>
        <item name="android:gravity">center|left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Widget.Philm.Movie.ListItem.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">13dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="Widget.Philm.Movie.ListItem.Subtitle" parent="Widget.Philm.Movie.ListItem.Title">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">11dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.Philm.Movie.Trailer.Title" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">@dimen/spacing_minor</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/black_translucent_gradient</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Philm.Movie.List.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">20dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.Philm.Movie.List.Subtitle" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.Philm.Movie.List.SectionHeader" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">@dimen/spacing_micro</item>
        <item name="android:paddingLeft">@dimen/spacing_major</item>
        <item name="android:background">@color/primary_accent_color</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Philm.Movie.Login.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">@dimen/movie_detail_title_textsize</item>
    </style>

    <style name="Widget.Philm.Person.Detail.Title"
        parent="Widget.Philm.Movie.Detail.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">bottom|left</item>
    </style>

    <style name="Widget.Philm.Person.Detail.Subtitle" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">@dimen/person_detail_subtitle_textsize</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">@dimen/movie_detail_title_textsize</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Tagline" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">@dimen/movie_detail_tagline_textsize</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.SectionHeader" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">@dimen/spacing_micro</item>
        <item name="android:paddingLeft">@dimen/spacing_major</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Summary" parent="android:Widget">
        <item name="font">roboto_slab</item>
        <item name="android:textSize">@dimen/movie_detail_summary_textsize</item>
        <item name="android:padding">@dimen/spacing_minor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="collapsed_maxLines">@integer/default_summary_maxlines</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Ratings.Title" parent="android:Widget">
        <item name="font">roboto_light</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Ratings.Votes" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Rating.Description" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Widget.Philm.Account.Drawer.Fullname" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">@dimen/drawer_user_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Philm.Account.Drawer.Username"
           parent="Widget.Philm.Account.Drawer.Fullname">
        <item name="font">roboto_condensed</item>
    </style>

    <style name="Widget.Philm.Movie.Drawer.Checkin.Header" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="Widget.Philm.Movie.Drawer.AddAccount" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="Widget.Philm.Movie.Drawer.Checkin.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="Widget.Philm.Spinner" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/philmcolor_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">
            @drawable/philmcolor_list_selector_holo_light
        </item>
    </style>

    <style name="Widget.Philm.ProgressBar" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="spb_color">@color/primary_accent_color</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

    <style name="Widget.Philm.RatingBar" parent="android:Widget.Holo.Light.RatingBar">
        <item name="android:progressDrawable">@drawable/philmcolor_ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/philmcolor_ratingbar_full_holo_light</item>
    </style>

    <style name="Widget.Philm.AutoCompleteTextView"
           parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/philmcolor_list_selector_holo_light</item>
        <item name="android:background">@drawable/philmcolor_edit_text_holo_light</item>
    </style>

    <style name="TextAppearance.Philm.FloatLabel" parent="android:Widget">
        <item name="android:textColor">@color/float_label</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
